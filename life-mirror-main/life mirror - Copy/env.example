# =============================================================================
# Life Mirror - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================

# Hugging Face API Token
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# Face++ API Credentials
# Get from: https://console.faceplusplus.com/
FACEPP_KEY=your_facepp_api_key_here
FACEPP_SECRET=your_facepp_api_secret_here

# OpenRouter API Key
# Get from: https://openrouter.ai/keys
OPENROUTER_KEY=your_openrouter_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Environment
FLASK_ENV=production
FLASK_DEBUG=0
FLASK_APP=lifemirror_api.py

# Python Path
PYTHONPATH=/app

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_MAX_MEMORY=512mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# SSL Certificate Paths (for production)
SSL_CERT_PATH=./docker/ssl/cert.pem
SSL_KEY_PATH=./docker/ssl/key.pem

# Secret Key for Flask
SECRET_KEY=your_secret_key_here_change_this_in_production

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana Configuration
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Resource Limits
MAX_MEMORY=4G
MAX_CPU=2.0

# Upload Limits
MAX_FILE_SIZE=50M
MAX_UPLOAD_FILES=10

# Rate Limiting
API_RATE_LIMIT=10r/s
UPLOAD_RATE_LIMIT=2r/s

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level
LOG_LEVEL=INFO

# Log File Paths
LOG_FILE_PATH=/app/logs
API_LOG_FILE=/app/logs/api.log
ERROR_LOG_FILE=/app/logs/error.log

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode (set to true for development)
DEV_MODE=false

# Hot Reload (development only)
FLASK_RELOAD=false

# Jupyter Configuration (development only)
JUPYTER_ENABLED=false
JUPYTER_TOKEN=dev123
JUPYTER_PORT=8888

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# External API Timeouts
API_TIMEOUT=30
UPLOAD_TIMEOUT=300

# External Service URLs
HUGGINGFACE_API_URL=https://api-inference.huggingface.co
FACEPP_API_URL=https://api-us.faceplusplus.com
OPENROUTER_API_URL=https://openrouter.ai/api/v1

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Model Cache
MODEL_CACHE_ENABLED=true
MODEL_CACHE_TTL=86400

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION=7d

# Backup Paths
BACKUP_PATH=/app/backups
REDIS_BACKUP_PATH=/app/backups/redis
MODEL_BACKUP_PATH=/app/backups/models

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email Notifications (optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Docker Configuration
DOCKER_REGISTRY=your_registry_here
DOCKER_IMAGE_TAG=latest

# Kubernetes Configuration (if using K8s)
K8S_NAMESPACE=lifemirror
K8S_REPLICAS=3

# =============================================================================
# ENVIRONMENT SPECIFIC OVERRIDES
# =============================================================================

# Override these for different environments
# Development: FLASK_ENV=development, FLASK_DEBUG=1
# Staging: FLASK_ENV=staging, FLASK_DEBUG=0
# Production: FLASK_ENV=production, FLASK_DEBUG=0 